<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Room"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorInputLabelGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/RoomSpinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right|end"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:gravity="right|end"
            android:paddingEnd="5dp"
            android:paddingStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="Rental Rate"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorInputLabelGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/RentalRateText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:gravity="right"
            android:hint="$750"
            android:inputType="numberDecimal"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorInputDefault"
            android:textColorHint="@color/colorTextHint"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="# Units"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="@color/colorInputLabelGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/NumberUnitsText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:gravity="right"
            android:hint="1"
            android:inputType="number"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorInputDefault"
            android:textColorHint="@color/colorTextHint"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <Button
            android:id="@+id/AddRoomButton"
            style="@android:style/Widget.Material.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            android:elevation="20dp"
            android:pointerIcon="hand"
            android:text="+"
            android:textColor="@color/colorTransparentButtonText"
            android:textSize="36sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/RoomListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:dividerHeight="5dp" />

    </LinearLayout>

</LinearLayout>
